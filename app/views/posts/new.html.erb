<%= form_with model: @post, url: user_posts_path(@user.id), method: :post, local: true, scope: :post do |form| %>
  <div class="section center">
    <%= form.label :title, "Title", class: "label " %>
    <%= form.text_field :title, class: "align-start" %>

    <%= form.label :text, "Content", class: "label" %>
    <%= form.text_area :text, size: "50x5" %>

    <%= form.submit "Create Post", class: "back-link" %>
  </div>
<% end %>