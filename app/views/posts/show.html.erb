<button class="back-link"><%= link_to "Go to all posts", :back %></button>

<div class="container">
  <div>
    <div>
      <h1><%= @post.title %> by <%= @user.name %></h1>
      <p>Comments: <%= @post.comments_counter %> | Likes: <%= @post.likes_counter %></p>
    </div>
    <p><%= @post.text %></p>
  </div>

  <ul>
    <% @post.comments.each do |comment| %>
      <li><%= @user.name %>: <%= comment.text %></li>
    <% end %>
  </ul>
</div>
