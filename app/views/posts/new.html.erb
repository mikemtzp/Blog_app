<%= form_with model: @post, url: new_post_path, method: :post, local: true, scope: :post do |form| %>
  <div class="form-group">
    <%= form.label :title, "Post title" %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :text, "Content" %>
    <%= form.text_area :text, size: "70x5" %>
  </div>

  <%= form.submit "Publish" %>
<% end %>