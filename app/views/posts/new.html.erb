<%= form_with model: @post, url: user_posts_path(@user.id), method: :post, local: true, scope: :post do |form| %>
  <div class="form-group">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>

    <%= form.label :text, "Content" %>
    <%= form.text_area :text, size: "70x5" %>

    <%= form.submit "Create Post" %>
  </div>
<% end %>