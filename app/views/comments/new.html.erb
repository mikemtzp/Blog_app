<%= form_with scope: :comment, url: user_post_comments_url(@user.id, @post.id), method: :post, local: true do |f| %>
  <div class="section center">
    <%= f.label :text, 'Comment', class: "label" %>
    <%= f.text_area :text, size: "50x5"%>

    <%= f.submit "Create comment", class: "back-link" %>
  </div>
<% end %>